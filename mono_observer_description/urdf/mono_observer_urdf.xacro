<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <link name="base_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="${base_mesh}"/>
            </geometry>
            <material name="gray">
                <color rgba="0.7 0.7 0.7 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="-0.0075 0 0.02" rpy="0 0 0"/>
            <geometry>
                <box size="0.06 0.03 0.04"/>
            </geometry>
        </collision>
    </link>

    <link name="link_1">
        <visual>
            <origin xyz="0 0 -0.05" rpy="0 0 0"/>
            <geometry>
                <mesh filename="${cintura_mesh}"/>
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <geometry>
                <box size="0.01 0.01 0.1"/>
            </geometry>
        </collision>
    </link>
    
    <link name="link_2">
        <visual>
            <origin xyz="0 0 -0.08" rpy="0 0 0"/>
            <geometry>
                <mesh filename="${antebrazo_mesh}"/>
            </geometry>
            <material name="green">
                <color rgba="0 1 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <geometry>
                <box size="0.01 0.01 0.1"/>
            </geometry>
        </collision>
    </link>
    
    <link name="link_3">
        <visual>
            <origin xyz="0 0 -0.15" rpy="0 0 0"/>
            <geometry>
                <mesh filename="${soporte_camara_mesh}"/>
            </geometry>
            <material name="blue">
                <color rgba="0 0 1 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <geometry>
                <box size="0.01 0.01 0.1"/>
            </geometry>
        </collision>
    </link>
    

    <joint name="base_1_joint" type="revolute">
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="link_1"/>
        <axis xyz="0 0 1" rpy="0 0 0"/>
        <limit effort="30" velocity="1.0" lower="-1.5708" upper="1.5708" />
    </joint>

    <joint name="1_2_joint" type="revolute">
        <origin xyz="0 0 0.03" rpy="0 1.5708 0"/>
        <parent link="link_1"/>
        <child link="link_2"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="30" velocity="1.0" lower="-3.1415" upper="0" />
    </joint>

    <joint name="2_3_joint" type="revolute">
        <origin xyz="0 0 0.071" rpy="0 0 0"/>
        <parent link="link_2"/>
        <child link="link_3"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="30" velocity="1.0" lower="-1.5708" upper="1.5708" />
    </joint>
    
</robot>